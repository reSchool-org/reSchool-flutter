<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background_schedule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_today"
            android:tint="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Расписание"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#B3FFFFFF"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нет уроков"
            android:textColor="#80FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lesson_row_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/lesson_num_0"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:background="@drawable/widget_circle_bg"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lesson_subject_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/lesson_time_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B3FFFFFF"
            android:textSize="11sp"
            android:fontFamily="monospace" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lesson_row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/lesson_num_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:background="@drawable/widget_circle_bg"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lesson_subject_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/lesson_time_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B3FFFFFF"
            android:textSize="11sp"
            android:fontFamily="monospace" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lesson_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/lesson_num_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:background="@drawable/widget_circle_bg"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lesson_subject_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/lesson_time_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B3FFFFFF"
            android:textSize="11sp"
            android:fontFamily="monospace" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lesson_row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/lesson_num_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:background="@drawable/widget_circle_bg"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lesson_subject_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/lesson_time_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B3FFFFFF"
            android:textSize="11sp"
            android:fontFamily="monospace" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lesson_row_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/lesson_num_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:background="@drawable/widget_circle_bg"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lesson_subject_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/lesson_time_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B3FFFFFF"
            android:textSize="11sp"
            android:fontFamily="monospace" />
    </LinearLayout>

</LinearLayout>